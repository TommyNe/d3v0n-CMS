{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <main id="main">

        <!-- ======= Blog Header ======= -->
        <div class="header-bg page-area">
            <div class="container position-relative">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="slider-content text-center">
                            <div class="header-bottom">
                                <div class="layer2">
                                    <h1 class="title2">D3v0n Blog</h1>
                                </div>
                                <div class="layer3">
                                    <h2 class="title3">News from D3v0n</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Blog Header -->

        <!-- ======= Blog Page ======= -->
        <div class="blog-page area-padding">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-4">
                        <div class="page-head-blog">
                            <div class="single-blog-page">
                                <!-- search option start -->
                                <form action="#">
                                    <div class="search-option">
                                        <input type="text" name="q" value="{{ app.request.query.get('q') }}" placeholder="Search...">
                                        <button class="button" type="submit">
                                            <i class="bi bi-search"></i>
                                        </button>
                                    </div>
                                </form>
                                <!-- search option end -->
                            </div>
                            <div class="single-blog-page">
                                <!-- recent start -->
                                <div class="left-blog">
                                    <h4>recent post</h4>
                                    <div class="recent-post">
                                        <!-- start single post -->
                                        {% for ent in latest %}
                                        <div class="recent-single-post">
                                            <div class="post-img">
                                                <a href="{{ path ('blog.details', {id: ent.id}) }}">
                                                    <img src="{{ asset('bilder/' ~ ent.pic)  }}" alt="">
                                                </a>
                                            </div>
                                            <div class="pst-content">
                                                <p><a href="{{ path ('blog.details', {id: ent.id}) }}"> {{ ent.Title }}</a></p>
                                            </div>
                                        </div>
                                        <!-- End single post -->
                                      {% endfor %}
                                        <!-- End single post -->
                                    </div>
                                </div>
                                <!-- recent end -->
                            </div>
                            <div class="single-blog-page">
                                <div class="left-blog">
                                    <h4>categories</h4>
                                    <ul>
                                        <li>
                                            <a href="#">Portfolio</a>
                                        </li>
                                        <li>
                                            <a href="#">Project</a>
                                        </li>
                                        <li>
                                            <a href="#">Design</a>
                                        </li>
                                        <li>
                                            <a href="#">wordpress</a>
                                        </li>
                                        <li>
                                            <a href="#">Joomla</a>
                                        </li>
                                        <li>
                                            <a href="#">Html</a>
                                        </li>
                                        <li>
                                            <a href="#">Website</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="single-blog-page">
                                <div class="left-blog">
                                    <h4>archive</h4>
                                    <ul>
                                        <li>
                                            <a href="#">07 July 2016</a>
                                        </li>
                                        <li>
                                            <a href="#">29 June 2016</a>
                                        </li>
                                        <li>
                                            <a href="#">13 May 2016</a>
                                        </li>
                                        <li>
                                            <a href="#">20 March 2016</a>
                                        </li>
                                        <li>
                                            <a href="#">09 Fabruary 2016</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="single-blog-page">
                                <div class="left-tags blog-tags">
                                    <div class="popular-tag left-side-tags left-blog">
                                        <h4>popular tags</h4>
                                        <ul>
                                            <li>
                                                <a href="#">Portfolio</a>
                                            </li>
                                            <li>
                                                <a href="#">Project</a>
                                            </li>
                                            <li>
                                                <a href="#">Design</a>
                                            </li>
                                            <li>
                                                <a href="#">Website</a>
                                            </li>
                                            <li>
                                                <a href="#">Joomla</a>
                                            </li>
                                            <li>
                                                <a href="#">Html</a>
                                            </li>
                                            <li>
                                                <a href="#">wordpress</a>
                                            </li>
                                            <li>
                                                <a href="#">Masonry</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End left sidebar -->
                    {% if app.request.query.get('q') %}
                    {% for quer in search %}
                    <!-- Start search blog -->
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="single-blog">
                                    <div class="single-blog-img">
                                        <a href="{{ path ('blog.details', {id: quer.id}) }}">
                                            <img src="{{ asset('bilder/' ~ quer.pic)  }}" alt="">
                                        </a>
                                    </div>
                                    <div class="blog-meta">
                    <span class="comments-type">
                      <i class="bi bi-chat"></i>
                      <a href="#">11 comments</a>
                    </span>
                                        <span class="date-type">
                      <i class="bi bi-calendar"></i>{{ quer.date|date('d.m.Y') }}
                    </span>
                                    </div>
                                    <div class="blog-text">
                                        <h4>
                                            <a href="{{ path ('blog.details', {id: quer.id}) }}">{{ quer.Title }}</a>
                                        </h4>
                                        <p>{{ quer.content[:50] }}...</p>
                                    </div>
                                    <span>
                    <a href="{{ path ('blog.details', {id: quer.id}) }}" class="ready-btn">Read more</a>
                  </span>
                                </div>
                            </div>
                            <!-- End search blog -->
                            {% endfor %}
                            {% endif %}

                            {% if not app.request.query.get('q') %}
                    {% for entry in blog %}
                    <!-- Start single blog -->
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="single-blog">
                                    <div class="single-blog-img">
                                        <a href="{{ path ('blog.details', {id: entry.id}) }}">
                                            <img src="{{ asset('bilder/' ~ entry.pic)  }}" alt="">
                                        </a>
                                    </div>
                                    <div class="blog-meta">
                    <span class="comments-type">
                      <i class="bi bi-person"></i>
                      <a href="{{ path ('blog.details', {id: entry.id}) }}#comments">{{ entry.user }}</a>
                    </span>
                                        <span class="date-type">
                      <i class="bi bi-calendar"></i>{{ entry.date|date('d.m.Y') }}
                    </span>
                                    </div>
                                    <div class="blog-text">
                                        <h4>
                                            <a href="{{ path ('blog.details', {id: entry.id}) }}">{{ entry.Title }}</a>
                                        </h4>
                                        <p>{{ entry.content[:50] }}...</p>
                                    </div>
                                    <span>
                    <a href="{{ path ('blog.details', {id: entry.id}) }}" class="ready-btn">Read more</a>
                  </span>
                                </div>
                            </div>
                            <!-- End single blog -->
                            {% endfor %}


                            <div class="blog-pagination">
                                {{ knp_pagination_render(blog) }}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Blog Page -->

    </main><!-- End #main -->
{% endblock %}
