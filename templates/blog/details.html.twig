{% extends 'base.html.twig' %}

{% block body %}
    <main id="main">

        <!-- ======= Blog Header ======= -->
        <div class="header-bg page-area">
            <div class="container position-relative">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="slider-content text-center">
                            <div class="header-bottom">
                                <div class="layer2">
                                    <h1 class="title2">Blog Details </h1>
                                </div>
                                <div class="layer3">
                                    <h2 class="title3">D3v0n</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Blog Header -->

        <!-- ======= Blog Page ======= -->
        <div class="blog-page area-padding">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-4">
                        <div class="page-head-blog">
                            <div class="single-blog-page">
                                <!-- search option start -->
                                <form action="#">
                                    <div class="search-option">
                                        <input type="text" name="q" value="{{ app.request.query.get('q') }}" placeholder="Search...">
                                        <button class="button" type="submit">
                                            <i class="bi bi-search"></i>
                                        </button>
                                    </div>
                                </form>
                                <!-- search option end -->
                            </div>
                            <div class="single-blog-page">
                                <!-- recent start -->

                                <div class="left-blog">
                                    <h4>recent post</h4>
                                    <div class="recent-post">
                                        <!-- start single post -->
                                        {% for post in latest %}
                                        <div class="recent-single-post">
                                            <div class="post-img">
                                                <a href="{{ path ('blog.details', {id: post.id}) }}">
                                                    <img src="{{ asset('bilder/' ~ post.pic) }}" alt="">
                                                </a>
                                            </div>
                                            <div class="pst-content">
                                                <p><a href="{{ path ('blog.details', {id: post.id}) }}"> {{ post.Title }}</a></p>
                                            </div>
                                        </div>
                                        {% endfor %}
                                        <!-- End single post -->
                                    </div>
                                </div>
                                <!-- recent end -->
                            </div>
                            <div class="single-blog-page">
                                <div class="left-blog">
                                    <h4>categories</h4>
                                    <ul>
                                        <li>
                                            <a href="#">Portfolio</a>
                                        </li>
                                        <li>
                                            <a href="#">Project</a>
                                        </li>
                                        <li>
                                            <a href="#">Design</a>
                                        </li>
                                        <li>
                                            <a href="#">wordpress</a>
                                        </li>
                                        <li>
                                            <a href="#">Joomla</a>
                                        </li>
                                        <li>
                                            <a href="#">Html</a>
                                        </li>
                                        <li>
                                            <a href="#">Website</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="single-blog-page">
                                <div class="left-blog">
                                    <h4>archive</h4>
                                    <ul>
                                        <li>
                                            <a href="#">07 July 2016</a>
                                        </li>
                                        <li>
                                            <a href="#">29 June 2016</a>
                                        </li>
                                        <li>
                                            <a href="#">13 May 2016</a>
                                        </li>
                                        <li>
                                            <a href="#">20 March 2016</a>
                                        </li>
                                        <li>
                                            <a href="#">09 Fabruary 2016</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="single-blog-page">
                                <div class="left-tags blog-tags">
                                    <div class="popular-tag left-side-tags left-blog">
                                        <h4>popular tags</h4>
                                        <ul>
                                            <li>
                                                <a href="#">Portfolio</a>
                                            </li>
                                            <li>
                                                <a href="#">Project</a>
                                            </li>
                                            <li>
                                                <a href="#">Design</a>
                                            </li>
                                            <li>
                                                <a href="#">wordpress</a>
                                            </li>
                                            <li>
                                                <a href="#">Joomla</a>
                                            </li>
                                            <li>
                                                <a href="#">Html</a>
                                            </li>
                                            <li>
                                                <a href="#">Masonry</a>
                                            </li>
                                            <li>
                                                <a href="#">Website</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End left sidebar -->
                    {% if app.request.query.get('q') %}
                        {% for quer in search %}
                    <!-- Start search blog -->
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="single-blog">
                                    <div class="single-blog-img">
                                        <a href="{{ path ('blog.details', {id: quer.id}) }}">
                                            <img src="{{ asset('bilder/' ~ quer.pic)  }}" alt="">
                                        </a>
                                    </div>
                                    <div class="blog-meta">
                    <span class="comments-type">
                      <i class="bi bi-chat"></i>
                      <a href="#">{{ comment|length }} comments</a>
                    </span>
                                        <span class="date-type">
                      <i class="bi bi-calendar"></i>{{ quer.date|date('d.m.Y') }}
                    </span>
                                    </div>
                                    <div class="blog-text">
                                        <h4>
                                            <a href="{{ path ('blog.details', {id: quer.id}) }}">{{ quer.Title }}</a>
                                        </h4>
                                        <p>{{ quer.content[:50] }}...</p>
                                    </div>
                                    <span>
                    <a href="{{ path ('blog.details', {id: quer.id}) }}" class="ready-btn">Read more</a>
                  </span>
                                </div>
                            </div>
                            <!-- End search blog -->
                        {% endfor %}

                    {% endif %}

                    {% if not app.request.query.get('q') %}
                    <!-- Start single blog -->
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <!-- single-blog start -->
                                <article class="blog-post-wrapper">
                                    <div class="post-thumbnail">
                                        <img src="{{ asset('bilder/' ~ details.pic)  }}" alt="" />
                                    </div>
                                    <div class="post-information">
                                        <h2>{{ details.Title }}</h2>
                                        <div class="entry-meta">
                                            <span class="author-meta"><i class="bi bi-person"></i> <a href="#">{{ details.user }}</a></span>
                                            <span><i class="bi bi-clock"></i>{{ details.date|date('d.m.Y') }}</span>
                                            <span class="tag-meta">
                        <i class="bi bi-folder"></i>
                        <a href="#">painting</a>,
                        <a href="#">work</a>
                      </span>
                                            <span>
                        <i class="bi bi-tags"></i>
                        <a href="#">tools</a>,
                        <a href="#"> Humer</a>,
                        <a href="#">House</a>
                      </span>
                                            <span><i class="bi bi-chat"></i> <a href="#">{{ comment|length }} comments</a></span>
                                        </div>
                                        <div class="entry-content">
                                            <p>{{ details.content }}</p>
                                        </div>
                                    </div>
                                </article>

                                <div class="clear"></div>

                                <!-- Comments -->

                                <div class="single-post-comments">
                                    <div class="comments-area">
                                        <div class="comments-heading">

                                            <h3>{{ comment|length }} comments</h3>
                                        </div>
                                        {% for post in comment %}
                                        <div class="comments-list">
                                            <ul>
                                                <li class="threaded-comments">
                                                    <div class="comments-details">
                                                        <div class="comments-list-img">
                                                            <img src="{{ asset('assets/img/blog/b02.jpg')  }}" alt="post-author">
                                                        </div>


                                                        <div class="comments-content-wrap">
                              <span>
                                <b><a href="#">{{ post.name }}</a></b>
                                Post author
                                <span class="post-time">{{ post.date|date('d.m.Y') }}</span>
                                <a href="#">Reply</a>
                              </span>
                                                            <p>{{ post.content }}</p>
                                                        </div>
                                                    </div>
                                                </li>


                                    {% endfor %}

                                    <!-- Comment Form -->
                                    {{ form_start(coform) }}
                                    <div class="comment-respond">
                                        <h3 class="comment-reply-title">Leave a Reply </h3>
                                        <span class="email-notes">Your email address will not be published. Required fields are marked *</span>
                                        <form action="#">
                                            <div class="row">
                                                <div class="col-lg-4 col-md-4">
                                                    {{form_row(coform.name)}}
                                                </div>
                                                <div class="col-lg-4 col-md-4">
                                                    {{form_row(coform.email)}}
                                                </div>
                                                <div class="col-lg-4 col-md-4">
                                                    {{form_row(coform.website)}}
                                                </div>
                                                <div class="col-lg-12 col-md-12 col-sm-12 comment-form-comment">
                                                   {{ form_row(coform.content) }}
                                                    <br/>
                                                    {{form_row(coform.post, { 'label': 'Post Comment' }, {'class': 'comment-respond input[type="submit"]'})}}
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    {{ form_end(coform) }}
                                </div>
                                {% endif %}
                                <!-- single-blog end -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Blog Page -->

    </main><!-- End #main -->
{% endblock %}
